<!DOCTYPE html>
<html>
<head>
  <title>Communication Logs</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Communication Logs</h1>
  <table>
    <thead>
      <tr>
        <th>Customer ID</th>
        <th>Message</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% logs.forEach(log => { %>
        <tr>
          <td><%= log.customer_id %></td>
          <td><%= log.message %></td>
          <td><%= log.status %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
